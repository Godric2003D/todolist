<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/stylesheets/styles.css" type="text/css">
</head>

<body>

    <div class="container hero-image my-5 pb-5">
        <div class="d-flex justify-content-center size my-auto py-5">
            To &nbsp; Do &nbsp; List
        </div>


        <form action="/" method="POST">
            <div class="container py-5">
                <div class="form-group row d-flex justify-content-center">
                    <div class="col-md-1"></div>
                    <div class="col-md-2 col-form-label">
                        <div class=" size-1">

                            <label for="" class="pl-5">What to do?</label>
                        </div>
                    </div>
                    <div class="col-6 ">
                        <input type="text" name="content" class="form-control ">
                    </div>
                    <div class="col-3">
                        <button type="submit">
                            <span class="fas fa-plus color"></span>
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <ul class="todo-list">
            <% todoTasks.forEach(details=> { %>
                <li class="todo-list-item">
                    <div class="todo-list-item-name">
                        <%= details.content %>
                        
                    </div>
                    <a href="/edit/<%= details._id %>" class="edit">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a href="/remove/<%= details._id %>" class="remove">
                        <span class="fas fa-times"></span>
                    </a>
                </li>
                <% }) %>
        </ul>

    </div>



    <footer class="fixed-bottom">
        <p style="text-align:center">Made with ‚ù§ By Debayan Ray</p>
     </footer>
    <script src="https://kit.fontawesome.com/2e375cc1ab.js" crossorigin="anonymous"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>